.headline
  width 100%
  padding-top: 10px
  // height 220px
  background-color #DDDDDD
  border-bottom 2px solid black
  display flex
  // align-items flex-end
  justify-content: center
  align-items: center
  .headline_image
    width 300px
    height 200px
    /*border 1px dashed red*/
    // margin-left 7%
  .little_text
    width 250px
    font-size: 0.6em
    text-align center
    align-self flex-end
    padding 10px 20px 12px 20px
  .headline_desc
    width 55%
    height 200px
    /*border 1px dashed blue*/
    margin-left 3.5%
    font-size 1.1em
    display flex
    flex-direction column
    .headline_header
      width 100%
      font-size: 2.1em
      padding-left 20px
    .headline_text
      width 86%
      padding 15px 20px 20px 20px
      strong
        font-weight: bold
    .button
      width 250px
      background green
      color white
      text-align center
      align-self flex-end
      border 2px solid black
      box-shadow: 5px 5px black;
      padding 10px 20px 12px 20px
      cursor pointer
